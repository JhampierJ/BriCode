@page
@using Bricons.Utilities;
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}
<div class="registro ">
    <div class="container container-r">
        <div class="parte2 parte2-r">
            <div class="img">
                <img class="img-r" src="~/img/img-registro.jpg" alt="">
            </div>
        </div>
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">

            <h2>Registro</h2>
            <div asp-validation-summary="ModelOnly" role="alert"></div>

            <span asp-validation-for="Input.Nombre" class="alerta"></span>
            <div class="inputs inputs-r">
                <ion-icon name="person-outline"></ion-icon>
                <input asp-for="Input.Nombre" autocomplete="Nombre" aria-required="true" type="text" placeholder="Nombres">
            </div>
            <span asp-validation-for="Input.Apellidos" class="alerta"></span>
            <div class="inputs inputs-r">
                <ion-icon name="person"></ion-icon>
                <input asp-for="Input.Apellidos" autocomplete="Apellidos" aria-required="true" type="text" placeholder="Apellidos">
            </div>
            <span asp-validation-for="Input.Dni" class="alerta"></span>
            <div class="inputs inputs-r">
                <ion-icon name="lock-closed-outline"></ion-icon>
                <input asp-for ="Input.Dni" autocomplete="Dni" aria-required="true" type="number" placeholder="DNI">
            </div>
            <span asp-validation-for="Input.NombreUsuario" class="alerta"></span>
            <div class="inputs inputs-r">
                <ion-icon name="person-circle-outline"></ion-icon>
                <input asp-for="Input.NombreUsuario" autocomplete="NombreUsuario" aria-required="true" type="text" placeholder="Nombre Usuario">
            </div>
            <span asp-validation-for="Input.Email" class="alerta"></span>
            <div class="inputs inputs-r">
                <ion-icon name="mail-outline"></ion-icon>
                <input asp-for ="Input.Email" autocomplete="username" aria-required="true" type="email" placeholder="Email">
            </div>
            <span asp-validation-for="Input.Password" class="alerta"></span>
            <div class="inputs inputs-r">
                <ion-icon name="lock-closed-outline"></ion-icon>
                <input input asp-for="Input.Password" autocomplete="new-password" aria-required="true" type="password" placeholder="Contraseña">
            </div>
            <span asp-validation-for="Input.ConfirmPassword" class="alerta"></span>
            <div class="inputs inputs-r">
                <ion-icon name="lock-closed-outline"></ion-icon>
                <input asp-for="Input.ConfirmPassword" autocomplete="new-password" aria-required="true" type="password" placeholder="Contraseña">
            </div>

            <div class="roles">
                <span>Roles</span>
                <input type="radio" name="radUserRole" value="@CNT.Admin" />@CNT.Admin
                <input type="radio" name="radUserRole" value="@CNT.Usuario" />@CNT.Usuario
            </div>
          

            <button id="registerSubmit" type="submit" >Registrarse</button>

        </form>

    </div>

</div>

