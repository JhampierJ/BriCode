@model IEnumerable<Bricons.Models.Pedido>
@{
    ViewData["Title"] = "IndexU";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Mis Pedidos</h1>

<p>
    <a asp-action="CreateUW" class="btn btn-success" >Create New</a>
</p>
<table class="table table-dark">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Fecha)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Producto)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Fecha)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Producto.NombreProducto)
                </td>
               
                <td>
                    <a asp-action="EditUW" asp-route-id="@item.Id" class="btn btn-primary">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">Details</a> 
                </td>
            </tr>
        }
    </tbody>
</table>


