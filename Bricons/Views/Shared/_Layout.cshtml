@using Bricons.Utilities
@using Microsoft.AspNetCore.Identity
@using Bricons.Areas.Identity.Data
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Bricons</title>
 <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Bricons.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/style2.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/perfil.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/home.css" asp-append-version="true" />
</head>
<body>
    <div class="header">
        <header>
            <div class="logo-menu">
                <img src="~/img/logo.png" alt="">
                <ion-icon id="icon-menu" name="menu-outline"></ion-icon>
            </div>
            <div class="menu">
                <nav id="menu-des">
                    <ul>
              

                        @if (!SignInManager.IsSignedIn(User))
                        {
                            <li><a asp-controller="Home" asp-action="Index">INICIO</a></li>
                           @* <li><a href="#">PRODUCTOS</a></li>*@

                            <li>
                                <a id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>
                            </li>
                            <li>
                                <a id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
                            </li>
                        }
                        else
                        {
                            @if (User.IsInRole(CNT.Admin))
                            {
                                <li><a asp-controller="Usuarios" asp-action="Index">USUARIOS</a></li>
                                <li><a asp-controller="Categoriums" asp-action="Index">CATEGORIAS</a></li>
                                <li><a asp-controller="Productoes" asp-action="Index">PRODUCTOS</a></li>
                                <li><a asp-controller="Pedidos" asp-action="Index">PEDIDOS</a></li>
                                <li><a asp-controller="Programaciones" asp-action="Index">PROGRAMACIONES</a></li>


                                <li >
                                    <a id="manage" asp-controller="Usuarios" asp-action="Perfil" title="Manage">Perfil</a>
                                </li>
                                <li>
                                    
                                    <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                                        <button id="logout" type="submit" class="nav-link btn btn-link text-dark border-0"><ion-icon name="log-out-outline"></ion-icon></button>
                                    </form>
                                </li>
                              
                               

                            }    @* Usuario*@
                            else if (User.IsInRole(CNT.Usuario))
                            {
                                <li><a asp-controller="Home" asp-action="Index">INICIO</a></li>
                                <li><a asp-controller="Productoes" asp-action="IndexU">PRODUCTOS</a></li>
                                <li><a asp-controller="Pedidos" asp-action="IndexU">PEDIDOS</a></li>
                                <li><a asp-controller="Programaciones" asp-action="IndexU">PROGRAMACIONES</a></li>
                                <li >
                                    <a id="manage" asp-controller="Usuarios" asp-action="Perfil" title="Manage">Perfil</a>
                                </li>
                                <li>
                                    <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                                        <button id="logout" type="submit" class="nav-link btn btn-link text-dark border-0"><ion-icon name="log-out-outline"></ion-icon></button>
                                    </form>
                                </li>
                            }
                        }
                   
                       
                       
                    </ul>
                </nav>
            </div>

        </header>
    </div>
